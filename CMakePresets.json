{
    "version": 8,
    "configurePresets": [
        {
            "name": "debug-gcc-linux-make",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}/",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_COLOR_DIAGNOSTICS": "ON",
                "CMAKE_C_COMPILER": "gcc"
            }
        },
        {
            "name": "release-gcc-linux-make",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}/",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_COLOR_DIAGNOSTICS": "ON",
                "CMAKE_C_COMPILER": "gcc"
            }
        },
        {
            "name": "release-emscripten-web-make",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}/",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_PROJECT_INCLUDE": "${sourceDir}/cmake/emscripten-overwrite.cmake",
                "PLATFORM": "Web",
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
                "VCPKG_TARGET_TRIPLET": "wasm32-emscripten"
            }
        },
        {
            "name": "release-mingw64-windows-make",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}/",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/cmake/mingw64-toolchain.cmake"
                },
                "VCPKG_TARGET_TRIPLET": "x64-mingw-static"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug-gcc-linux-make",
            "configurePreset": "debug-gcc-linux-make"
        },
        {
            "name": "release-gcc-linux-make",
            "configurePreset": "release-gcc-linux-make"
        },
        {
            "name": "release-emscripten-web-make",
            "configurePreset": "release-emscripten-web-make"
        },
        {
            "name": "release-mingw64-windows-make",
            "configurePreset": "release-mingw64-windows-make"
        }
    ]
}
